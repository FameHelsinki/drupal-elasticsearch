{
    "name": "famehelsinki/elastic",
    "description": "Elasticsearch local development template",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.5",
        "drupal/config_ignore": "^3.3",
        "drupal/config_split": "^2.0",
        "drupal/core-composer-scaffold": "^11",
        "drupal/core-project-message": "^11",
        "drupal/core-recommended": "^11",
        "drupal/geofield": "^1.60",
        "drupal/pathauto": "^1.13",
        "drupal/search_api": "^1.35",
        "drupal/token": "^1.15",
        "drush/drush": "^13",
        "elasticsearch/elasticsearch": "^8",
        "makinacorpus/php-lucene": "^1.2",
        "matthiasnoback/phpunit-asynchronicity": "^3.0",
        "mglaman/composer-drupal-lenient": "^1.0",
        "opensearch-project/opensearch-php": "^2.2"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "deployer/deployer": "^7",
        "drupal/coder": "~8.3.12",
        "drupal/core-dev": "^11",
        "drupal/devel": "^5.0",
        "mglaman/phpstan-drupal": "^1.2.11",
        "phpspec/prophecy-phpunit": "^2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "php-http/discovery": true,
            "mglaman/composer-drupal-lenient": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test-static-php": [
            "bin/phpstan analyse web/modules/custom"
        ],
        "post-install-cmd": [
            "cp dist.phpunit.xml web/core/phpunit.xml"
        ],
        "test-coding-standards": [
            "bin/phpcs --colors --standard=Drupal --extensions=php,module --ignore='*.css,*.md' ./web/modules/custom --report=summary",
            "bin/phpcs --colors --standard=Drupal --extensions=php,theme --ignore='*.css,*.md,node_modules/*' ./web/themes/custom --report=summary"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "patches": {
          "drupal/core": {
            "2718657 - LanguageNegotiator::updateConfiguration() is passed a NULL, when config-import on first time": "https://www.drupal.org/files/issues/2020-09-21/language-2718657-30.patch",
            "3002532 - Call to a member function set Weight() on null, when adding language": "https://www.drupal.org/files/issues/2019-11-19/drupal.8.8.x-3002532-20.patch"
          }
        },
        "patchLevel": {
          "drupal/core": "-p2"
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[project-root]/.gitattributes": false,
                "[project-root]/.editorconfig": false,
                "[web-root]/example.gitignore": false,
                "[web-root]/modules/README.txt": false,
                "[web-root]/themes/README.txt": false,
                "[web-root]/profiles/README.txt": false,
                "[web-root]/sites/README.txt": false,
                "[web-root]/.gitignore": false,
                "[web-root]/sites/.gitignore": false,
                "[web-root]/sites/default/default.settings.php": false,
                "[web-root]/sites/development.services.yml": false,
                "[web-root]/INSTALL.txt": false
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-lenient": {
            "allowed-list": ["drupal/bigint", "drupal/image_derivative_token", "drupal/media_field_formatters"]
        }
    }
}
